<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="broccoli.donotplaythisgame" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="level1to5.ActivityLevel1"
            android:label="@string/activity_level1"
            android:parentActivityName=".ActivityMain"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="broccoli.donotplaythisgame.ActivityMain" />
        </activity>
        <activity
            android:name="level1to5.ActivityLevel2"
            android:label="@string/activity_level2"
            android:parentActivityName=".ActivityMain"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="broccoli.donotplaythisgame.ActivityMain" />
        </activity>
        <activity
            android:name=".ActivitySelector"
            android:label="@string/title_activity_activity_selector" >
        </activity>
    </application>

</manifest>
